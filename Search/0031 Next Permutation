class Solution {
public:
    // 1 2 7 4 3 1 -> 1 3 1 2 4 7
    void nextPermutation(vector<int>& nums) {
        int i = nums.size() - 2;
        while(i >= 0 && nums[i + 1] <= nums[i])
            --i;
        
        if(i >= 0) {
            int j = nums.size() - 1;
            while(j >= 0 && nums[j] <= nums[i])
                --j;
            swap(nums[i], nums[j]);
        }
        reverse(begin(nums) + i + 1 , end(nums));
    }
};
