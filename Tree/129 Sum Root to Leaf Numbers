/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    int sumNumbers(TreeNode* root) {
        vector<int> pathSum;
        preOrder(root, 0, pathSum);
        int ans = 0;
        for(int num : pathSum) {
            ans += num;
        }
        return ans;
    }
private:
    void preOrder(TreeNode* root, int sum, vector<int>& pathSum) {
        if(!root) return;
        
        sum = sum * 10 + root->val;
        if(!root->left && !root->right)
            pathSum.push_back(sum);
        preOrder(root->left, sum, pathSum);
        preOrder(root->right, sum, pathSum);
    }
};
