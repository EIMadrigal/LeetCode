class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        const int n = nums.size();
        if(n < 2)
            return n;
        
        int ans = 0, i = 0;
        while(i < n) {
            nums[ans++] = nums[i];
            int j = i + 1;
            
            while(j < n && nums[j - 1] == nums[j])
                ++j;
            i = j;
        }
        return ans;
    }
};
