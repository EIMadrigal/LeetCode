class Solution {
public:
    bool isStraight(vector<int>& nums) {
        // 1. 除大小王外无重复
        // 2. 除大小王外max - min < 5
        sort(nums.begin(), nums.end());
        int cnt = 0;
        for (int i = 0; i < 4; ++i) {
            if (!nums[i]) {
                ++cnt;
            }
            else if (nums[i] == nums[i + 1]) {
                return false;
            }
        }
        return nums[4] - nums[cnt] < 5;
    }
};
