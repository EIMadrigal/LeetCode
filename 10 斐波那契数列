class Solution {
public:
    int fib(int n) {
        int a = 0, b = 1;
        for (int i = 0; i < n; ++i) {
            int tmp = a;
            a = b;
            b = (tmp + b) % 1000000007;
        }
        return a;
    }
};


青蛙跳台阶问题
class Solution {
public:
    int numWays(int n) {
        int a = 0, b = 1;
        for (int i = 0; i < n; ++i) {
            int tmp = a;
            a = b;
            b = (tmp + b) % 1000000007;
        }
        return b;
    }
};
