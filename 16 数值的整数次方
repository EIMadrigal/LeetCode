class Solution {
public:
    double myPow(double x, int n) {
        if (!n)
            return 1.0;
        
        long nn = n;
        if (n < 0) {
            x = 1.0 / x;
            nn = -nn;
        }

        double ans = 1.0;
        while (nn > 0) {
            if (nn & 1)
                ans *= x;
            x *= x;
            nn >>= 1;
        }
        return ans;
    }
};
