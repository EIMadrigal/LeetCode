class Solution:
    def maxRunTime(self, n: int, batteries: List[int]) -> int:
        l, r = 0, sum(batteries) // n + 1
        while l < r:
            mid = (l + r) // 2
            s = sum(min(battery, mid) for battery in batteries)
            if s >= n * mid:
                l = mid + 1
            else:
                r = mid
        return l - 1
